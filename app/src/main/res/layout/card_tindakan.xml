<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImageTindakan"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:scaleType="fitCenter"
            android:src="@drawable/buku2" />


        <TextView
            android:id="@+id/listJudulTindakan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/listImageTindakan"
            android:fontFamily="@font/mulish"
            android:text="Matematika Kelas VII"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageTindakan"
            android:layout_alignTop="@id/listJudulTindakan"
            android:layout_marginStart="152dp"
            android:layout_marginTop="56dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/txt_semesterTindakan"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listJudulTindakan"
            android:layout_alignStart="@id/listJudulTindakan"
            android:layout_marginStart="27dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Semester 1"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageTindakan"
            android:layout_marginStart="152dp"
            android:layout_below="@+id/placeholder"
            android:layout_marginTop="33dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/penerbitTindakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_semesterTindakan"
            android:layout_alignStart="@id/txt_semesterTindakan"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Penerbit : 2019"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageTindakan"
            android:layout_alignTop="@id/placeholder2"
            android:layout_marginStart="152dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/tahunTindakan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/penerbitTindakan"
            android:layout_alignStart="@id/txt_semesterTindakan"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Tahun Terbit : 2019"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jumlahTindakan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tahunTindakan"
            android:layout_alignStart="@id/placeholder"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/txt_semesterTindakan"
            android:background="@drawable/rounded"
            android:textAlignment="center"
            android:text="Status: kembalikan sebelum (28/12/2022)"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>
