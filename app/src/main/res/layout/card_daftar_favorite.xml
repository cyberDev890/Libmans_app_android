<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/listImageDaftarFavorit"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:scaleType="fitCenter"
            android:src="@drawable/buku2" />


        <TextView
            android:id="@+id/listJudulDaftarFavorit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/listImageDaftarFavorit"
            android:fontFamily="@font/mulish"
            android:text="Matematika Kelas VII"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageDaftarFavorit"
            android:layout_alignTop="@id/listImageDaftarFavorit"
            android:layout_marginStart="152dp"
            android:layout_marginTop="77dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/txt_semesterDaftarFavorit"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/listJudulDaftarFavorit"
            android:layout_alignStart="@id/listJudulDaftarFavorit"
            android:layout_marginStart="27dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Semester 1"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageDaftarFavorit"
            android:layout_alignTop="@id/listImageDaftarFavorit"
            android:layout_marginStart="152dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/tahunDaftarFavorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_semesterDaftarFavorit"
            android:layout_alignStart="@id/txt_semesterDaftarFavorit"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Penerbit : 2019"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/placeholder3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/listImageDaftarFavorit"
            android:layout_alignTop="@id/listImageDaftarFavorit"
            android:layout_marginStart="152dp"
            android:layout_marginTop="158dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/penerbitDaftarFavorit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tahunDaftarFavorit"
            android:layout_alignStart="@id/txt_semesterDaftarFavorit"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/mulish"
            android:gravity="center_vertical"
            android:text="Tahun Terbit : 2019"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>
</LinearLayout>
